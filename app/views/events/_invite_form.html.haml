= form_for @event, :url => { :action => :invite } do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :invitations
    = f.text_area :invitations
  .actions
    = f.submit 'Go'
