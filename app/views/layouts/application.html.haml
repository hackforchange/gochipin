!!! 5
%html
  %head
    %title= 'Go Chip In - ' + yield_for(:title, "Do Some Good")
    
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    
    %link{:href=>'http://fonts.googleapis.com/css?family=Carter+One&v1', :rel=>'stylesheet', :type=>'text/css'}
    
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    
    = javascript_include_tag :defaults
    = javascript_include_tag 'polymaps.js'
    = javascript_include_tag 'jquery-qtip.js'    
    = csrf_meta_tag
  %body{:class=>"bp #{yield_for(:body, 'one-col')}"}
    #header
      %ul.about
        %li 
          = link_to(image_tag('info.png') << ' About', '/about')
      %ul
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}", :class => "flash #{name}" if msg.is_a?(String)

    #container
      #title    
        %h1 
          = link_to "Go Chip In", "/"


      = yield